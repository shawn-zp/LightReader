<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

	<!-- 按钮 -->
	<style name="button" parent="@android:style/Widget.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	    
	<!--  菜单标题 -->
	<style name="menu_title" parent="@android:style/Widget.TextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/menu_title_bg</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	<!--  菜单文字 -->
	<style name="menu_text" parent="@android:style/Widget.TextView">  
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	<!--  菜单按钮  -->
	<style name="menu_button" parent="@android:style/Widget.ImageButton">  
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">20dp</item>
		<item name="android:background">@drawable/menu_button_style</item>
	</style>
	<!--  菜单选项卡  -->
	<style name="menu_option" parent="@android:style/Widget.Button">  
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@drawable/menu_option_bg</item>
	</style> 
	<style name="menu_option_false" parent="@android:style/Widget.Button">  
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@drawable/menu_option_bg_false</item>
	</style> 

	<!--  选择背景按钮  -->
	<style name="bg_button" parent="@android:style/Widget.ImageButton">  
		<item name="android:layout_width">60dp</item>
		<item name="android:layout_height">80dp</item>
		<item name="android:layout_marginLeft">20dp</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>

	<!-- 添加小说路径 -->
	<style name="addbook_folderPath" parent="@android:style/Widget.TextView">  
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">15sp</item>
		<item name="android:singleLine">true</item>
	</style>
	<!-- 添加小说标题 -->
	<style name="addbook_title" parent="@android:style/Widget.TextView">  
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">true</item>
	</style>
	<!-- 添加小说信息 -->
	<style name="addbook_info" parent="@android:style/Widget.TextView">  
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#4C4C4C</item>
		<item name="android:textSize">15sp</item>
		<item name="android:singleLine">true</item>
	</style>

	<!-- 书签样式 -->
	<style name="bookmark_preview" parent="@android:style/Widget.TextView">  
		<item name="android:layout_width">75dp</item>
		<item name="android:layout_height">85dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">13sp</item>
	</style>
	<style name="bookmark_location" parent="@android:style/Widget.TextView">  
		<item name="android:layout_width">75dp</item>
		<item name="android:layout_height">20dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">15sp</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">bottom</item>
	</style>

</resources>
